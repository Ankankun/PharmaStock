<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/medicine.png" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/script.js" defer></script>

    <title>PharmaStock | Add Stock</title>
  </head>

  <body>
    <!-- Navbar Section -->
    <div class="navbar">
      <div class="logo">
        <a href="/">
          <img src="/assets/Pharma Stock Logo svg.svg" alt="logo" />
        </a>
      </div>
      <div class="menu-items">
        <a href="add-stock.html">Stock</a>
        <a href="customer.html">Customer</a>
        <a href="payment.html">Payment</a>
        <a href="feedback.html">Feedback</a>
        <a href="sales.html">Sales</a>
        <a href="account.html">Account</a>
        <a href="account.html">
          <img src="/assets/account-symbol.svg" alt="account-symbol" />
        </a>
      </div>
    </div>

    <!-- Add Stock Section -->
    <main class="stock-layout">
      <aside class="stock-sidebar">
        <h2>STOCKS</h2>
        <div class="sidebar-divider"></div>
        <nav class="stock-nav">
          <button class="btn-sidebar active" onclick="window.location.href='/add-stock'">
            Add +
          </button>
          <button class="btn-sidebar" onclick="window.location.href='/view-stock'">View</button>
          <button class="btn-sidebar" onclick="window.location.href='/update-stock'">Update</button>
          <button class="btn-sidebar" onclick="window.location.href='/sell'">Sell</button>
        </nav>
        <div class="sidebar-divider bottom"></div>
      </aside>

      <section class="stock-content">
        <!-- Form Action points to our backend route -->
        <form class="stock-form" action="/inventory/add" method="POST">
          <div class="form-grid">
            <!-- Row 1 -->
            <div class="form-group">
              <label for="batch-no">Batch No</label>
              <input type="text" id="batch-no" name="batch_no" placeholder="Batch No" required />
            </div>
            <div class="form-group">
              <label for="med-name">Med name</label>
              <input type="text" id="med-name" name="med_name" placeholder="Med name" required />
            </div>
            <div class="form-group">
              <label for="manf-name">Manf. Name</label>
              <input type="text" id="manf-name" name="manufacturer_name" placeholder="Manf. Name" />
            </div>

            <!-- Row 2 -->
            <div class="form-group">
              <label for="manf-date">Manf. Date</label>
              <input type="date" id="manf-date" name="manufacture_date" />
            </div>
            <div class="form-group">
              <label for="exp-date">Exp Date</label>
              <input type="date" id="exp-date" name="expiry_date" required />
            </div>
            <div class="form-group">
              <label for="rack-no">Rack / Shelf No</label>
              <input type="text" id="rack-no" name="rack_no" placeholder="e.g. Rack A-2" />
            </div>

            <!-- Row 3 -->
            <div class="form-group">
              <label for="buying-cost">Buying Cost</label>
              <input
                type="number"
                step="0.01"
                id="buying-cost"
                name="buying_cost"
                placeholder="Buying cost"
              />
            </div>
            <div class="form-group">
              <label for="mrp">MRP</label>
              <input type="number" step="0.01" id="mrp" name="mrp" placeholder="MRP" />
            </div>
            <div class="form-group">
              <label for="discount-cost">Discount Cost</label>
              <input type="number" step="0.01" id="discount-cost" placeholder="Discount cost" />
            </div>

            <!-- Row 4 -->
            <div class="form-group">
              <label for="consumer-cost">Consumer Cost</label>
              <input
                type="number"
                step="0.01"
                id="consumer-cost"
                name="consumer_cost"
                placeholder="Consumer Cost"
                required
              />
            </div>
            <div class="form-group">
              <label for="prescription">Prescription Needed</label>
              <select id="prescription" name="prescription_required">
                <option value="" disabled selected>Prescription needed</option>
                <option value="yes">Yes</option>
                <option value="no">No</option>
              </select>
            </div>
            <div class="form-group">
              <label for="generic-name">Generic Name</label>
              <input
                type="text"
                id="generic-name"
                name="generic_name"
                placeholder="e.g. Paracetamol"
              />
            </div>

            <!-- Row 5 -->
            <div class="form-group">
              <label for="supplier-id">Supplier Name</label>
              <input
                type="text"
                id="supplier-id"
                name="supplier_name"
                placeholder="Supplier Name"
              />
            </div>
            <div class="form-group">
              <label for="supplier-contact">Supplier Contact</label>
              <input
                type="text"
                id="supplier-contact"
                name="supplier_contact"
                placeholder="Supplier Contact"
              />
            </div>
            <div class="form-group">
              <label for="med-category">Med Category</label>
              <input type="text" id="med-category" name="category" placeholder="Med Category" />
            </div>

            <!-- Row 6 -->
            <div class="form-group">
              <label for="date-entry">Date of entry</label>
              <input type="date" id="date-entry" name="entry_date" />
            </div>
            <div class="form-group">
              <label for="unit-type">Unit Type</label>
              <select id="unit-type" name="unit_type">
                <option value="" disabled selected>Select Unit</option>
                <option value="strip">Strip</option>
                <option value="bottle">Bottle</option>
                <option value="box">Box</option>
                <option value="vial">Vial</option>
                <option value="tablet">Tablet</option>
              </select>
            </div>
            <div class="form-group">
              <label for="quantity">Quantity</label>
              <input type="number" id="quantity" name="quantity" placeholder="Quantity" required />
            </div>
          </div>

          <button type="submit" class="btn-save">Save</button>
        </form>
      </section>
    </main>

    <!-- Footer Section -->
    <footer>
      <div class="footer">
        <a href="about.html">About</a>
        <a href="help.html">Help Center</a>
        <a href="tos.html">Terms of Service</a>
        <a href="policy.html">Privacy Policy</a>
        <a href="email.html">Email</a>
      </div>
      <div class="socials">
        <img src="/assets/Social-Instagram.svg" alt="Instagram-icon" />
        <img src="/assets/Social-fb.svg" alt="Facebook-icon" />
        <img src="/assets/Social-twitter.svg" alt="Twitter-icon" />
      </div>
    </footer>
  </body>
</html>
